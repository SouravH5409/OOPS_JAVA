import java.util.Scanner;
interface Sports{
	final float sportwt = 6;
	abstract void putwt();
	}
class Student{
	void getNumber(){
		Scanner sc = new Scanner(System.in);
			int r=sc.nextInt();
			}
	void putNumber(){
		System.out.println("Roll number is " +r);
		}
	}
class Test extends Student{
	int t1,t2;
  	 void getMarks(){
		Scanner s = new Scanner(System.in);
		t1=s.nextInt();
		t2=s.nextInt();

		}
	void putMarks(){
				System.out.println("Term 1 :"+t1+"\nTerm 2 :"+t2);
		}
	}
class Result extends Test implements Sports{
	void putwt(){
		System.out.println(sportwt);
		}
	void sum(){
		total = t1+t2;
		System.out.println("Total Score =" +total);	
	}
}
class Main{
	public static void main(String args []){
		Student s = new Student();
		Test t = new Test();
		Result r = new Result();
		System.out.println("Enter Roll number");
		s.getNumber();
		System.out.println("Enter Term1 and term 2 marks");
		t.getMarks();
		System.out.println("");
		s.putNumber();
		t.putMarks();
		r.putwt();
		r.sum();
		}
	}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
